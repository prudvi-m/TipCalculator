@model TipCalculatorModel
@{
    ViewBag.Title = "Tip Calculator";
}
<h1>Tip Calculator</h1>
<form asp-action="Index" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="CostOfMeal">Cost of Meal:</label>
        <input asp-for="CostOfMeal" />
    </div>
    <div>
        <label>15% tip:</label>
        <label>@ViewBag.tip15Percent</label>
    </div>
    <div>
        <label>20% tip:</label>
        <label>@ViewBag.tip20Percent</label>
    </div>
    <div>
        <label>25% tip:</label>
        <label>@ViewBag.tip25Percent</label>
    </div>
    <button type="submit">Calculate</button>
    <a asp-action="Index">Clear</a>
</form>
